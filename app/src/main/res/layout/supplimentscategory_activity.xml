<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    tools:context=".Kibblecategory"
    android:background="#D5DFDE">

    <TextView
        android:id="@+id/kibble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Suppliment Products"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginStart="90dp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/kibble"
        android:layout_marginTop="20dp"
        android:hint="Search products"
        android:textColorHint="@color/black"
        android:padding="8dp"
        android:background="@color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/kibble"
        android:layout_marginTop="70dp"
        >

        <LinearLayout
            android:id="@+id/productLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/productCard9"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="20dp"
                android:backgroundTint="@color/white"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    >

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="175dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/omega3"
                        android:background="@color/white"/>

                    <TextView
                        android:id="@+id/product_name9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Omega-3 Fish Oil"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginTop="-150dp"
                        android:layout_marginStart="140dp"/>

                    <TextView
                        android:layout_width="260dp"
                        android:layout_height="50dp"
                        android:text="Enhances skin health, reduces inflammation, supports joint function, and improves coat shine."
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="140dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="20$"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginStart="140dp"
                        android:layout_marginTop="30dp"/>

                    <Button
                        android:id="@+id/product9"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginTop="-35dp"
                        android:text="Add to Cart"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/black"
                        android:layout_marginStart="260dp"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/productCard10"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="20dp"
                android:backgroundTint="@color/white"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="175dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/probiotics"
                        android:background="@color/white"/>

                    <TextView
                        android:id="@+id/product_name10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Probiotics"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginTop="-160dp"
                        android:layout_marginStart="150dp"/>

                    <TextView
                        android:layout_width="250dp"
                        android:layout_height="50dp"
                        android:text="Promotes digestive health, supports immune function, improves stool consistency, and balances gut flora."
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="150dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="60$"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginStart="150dp"
                        android:layout_marginTop="20dp"/>

                    <Button
                        android:id="@+id/product10"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginTop="-35dp"
                        android:text="Add to Cart"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/black"
                        android:layout_marginStart="260dp"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/productCard11"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="20dp"
                android:backgroundTint="@color/white"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="175dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/vitamin"
                        android:background="@color/white"/>

                    <TextView
                        android:id="@+id/product_name11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vitamin E"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginTop="-150dp"
                        android:layout_marginStart="160dp"/>

                    <TextView
                        android:layout_width="260dp"
                        android:layout_height="50dp"
                        android:text="Acts as an antioxidant, supports skin health, aids immune function, and improves overall vitality."
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="160dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="10$"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginStart="160dp"
                        android:layout_marginTop="20dp"/>

                    <Button
                        android:id="@+id/product11"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginTop="-35dp"
                        android:text="Add to Cart"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/black"
                        android:layout_marginStart="270dp"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/productCard12"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="20dp"
                android:backgroundTint="@color/white"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="175dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/hemp"
                        android:background="@color/white"/>

                    <TextView
                        android:id="@+id/product_name12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hemp Oil"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginTop="-150dp"
                        android:layout_marginStart="160dp"/>

                    <TextView
                        android:layout_width="250dp"
                        android:layout_height="50dp"
                        android:text="Reduces anxiety, supports skin health, promotes joint function, and improves overall well-being."
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="160dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="30$"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginStart="160dp"
                        android:layout_marginTop="30dp"/>

                    <Button
                        android:id="@+id/product12"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginTop="-35dp"
                        android:text="Add to Cart"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/black"
                        android:layout_marginStart="260dp"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                />

        </LinearLayout>


    </ScrollView>

</RelativeLayout>
