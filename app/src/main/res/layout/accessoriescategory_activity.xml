<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    tools:context=".Kibblecategory"
    android:background="#D5DFDE">

    <TextView
        android:id="@+id/kibble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accessories Products"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginStart="90dp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/kibble"
        android:layout_marginTop="20dp"
        android:hint="Search products"
        android:textColorHint="@color/black"
        android:padding="8dp"
        android:background="@color/white" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/kibble"
        android:layout_marginTop="70dp"
        >

        <LinearLayout
            android:id="@+id/productLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/productCard17"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="20dp"
                android:backgroundTint="@color/white"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    >

                    <ImageView
                        android:layout_width="117dp"
                        android:layout_height="117dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/dogbed"
                        android:background="@color/white"
                        android:layout_marginTop="30dp"/>

                    <TextView
                        android:id="@+id/product_name17"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Orthopedic Dog Bed"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginTop="-130dp"
                        android:layout_marginStart="130dp"/>

                    <TextView
                        android:layout_width="260dp"
                        android:layout_height="50dp"
                        android:text="Orthopedic Dog Bed with memory foam provides superior comfort and support for joint health and restful sleep."
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="130dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="120$"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginStart="130dp"
                        android:layout_marginTop="30dp"/>

                    <Button
                        android:id="@+id/product17"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginTop="-35dp"
                        android:text="Add to Cart"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/black"
                        android:layout_marginStart="260dp"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/productCard18"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="20dp"
                android:backgroundTint="@color/white"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="175dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/hornes"
                        android:background="@color/white"/>

                    <TextView
                        android:id="@+id/product_name18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Adjustable Dog Harness"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginTop="-150dp"
                        android:layout_marginStart="160dp"/>

                    <TextView
                        android:layout_width="240dp"
                        android:layout_height="50dp"
                        android:text="Adjustable Dog Harness offers comfort and control with customizable straps to fit various sizes and prevent pulling."
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="160dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="70$"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginStart="160dp"
                        android:layout_marginTop="20dp"/>

                    <Button
                        android:id="@+id/product18"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginTop="-35dp"
                        android:text="Add to Cart"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/black"
                        android:layout_marginStart="260dp"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/productCard19"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="20dp"
                android:backgroundTint="@color/white"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="175dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/dogtoy"
                        android:background="@color/white"/>

                    <TextView
                        android:id="@+id/product_name19"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Interactive Dog Toy"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginTop="-150dp"
                        android:layout_marginStart="160dp"/>

                    <TextView
                        android:layout_width="250dp"
                        android:layout_height="50dp"
                        android:text="Interactive Dog Toy engages dogs with treats and challenges, providing mental stimulation and reducing boredom during playtime."
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="160dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="30$"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginStart="160dp"
                        android:layout_marginTop="20dp"/>

                    <Button
                        android:id="@+id/product19"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginTop="-35dp"
                        android:text="Add to Cart"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/black"
                        android:layout_marginStart="270dp"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/productCard20"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="20dp"
                android:backgroundTint="@color/white"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="175dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/dogbottle"
                        android:background="@color/white"/>

                    <TextView
                        android:id="@+id/product_name20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Travel Dog Water Bottle"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginTop="-150dp"
                        android:layout_marginStart="150dp"/>

                    <TextView
                        android:layout_width="250dp"
                        android:layout_height="50dp"
                        android:text="Travel Dog Water Bottle features a built-in bowl for easy hydration during walks and outdoor adventures."
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="150dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="20$"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginStart="150dp"
                        android:layout_marginTop="30dp"/>

                    <Button
                        android:id="@+id/product20"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginTop="-35dp"
                        android:text="Add to Cart"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/black"
                        android:layout_marginStart="260dp"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                />

        </LinearLayout>


    </ScrollView>

</RelativeLayout>
