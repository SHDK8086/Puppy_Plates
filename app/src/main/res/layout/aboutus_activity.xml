<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Splashscreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#D5DFDE"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/Logo"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/puppylogo" />

        <TextView
            android:id="@+id/spalshscreentext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="About Us"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="32sp"
            android:gravity="center"
            android:visibility="visible"
            tools:visibility="visible"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"/>

        <TextView
            android:layout_width="380dp"
            android:layout_height="210dp"
            android:text="Puppy Plates is a specialized dog food store offering a curated selection of high-quality, nutritious meals tailored for dogs of all breeds and sizes. With a focus on healthy ingredients, the store also provides educational content on pet nutrition, ensuring every pup enjoys balanced and delicious meals"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginTop="30dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* Contact No - 0777-6758908, 0703214665"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* Email Address - puppyplates@gmail.com"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>